<%= form_for @author do |f| %>

  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name, :autofocus => true %>
  </p>

  <p>
    <%= f.label :nationality %><br/>
    <%= f.text_field :nationality %>
  </p>

   <p>
    <%= f.label :dob, 'Date of Birth'%><br/>
    <%= f.text_field :dob %>
  </p>

   <p>
    <%= f.label :image %><br/>
    <%= f.text_field :image %>
  </p>

  <%= f.submit %>
<% end %>